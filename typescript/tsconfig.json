{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "lib": ["es6", "dom"],
    "jsx": "react",
    "outDir": "./bin",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "bin",
    "node_modules",
    "__tests__"
  ],
  "compileOnSave": true
}
